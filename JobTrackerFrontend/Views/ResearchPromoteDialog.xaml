<Window x:Class="JobTrackerFrontend.Views.ResearchPromoteDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:vm="clr-namespace:JobTrackerFrontend.ViewModels"
        d:DataContext="{d:DesignInstance vm:ResearchPromoteViewModel}"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}"
        Width="500" SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        FontFamily="{md:MaterialDesignFont}">

    <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="700">
        <StackPanel Margin="24">

            <!-- Section: Client Info -->
            <TextBlock Text="Client Information"
                       Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                       Margin="0,0,0,12" />

            <!-- Client Type -->
            <ComboBox ItemsSource="{Binding ClientTypes}"
                      SelectedItem="{Binding ClientType}"
                      md:HintAssist.Hint="Client Type"
                      Style="{StaticResource MaterialDesignOutlinedComboBox}"
                      Margin="0,0,0,16" />

            <!-- Name -->
            <TextBox Text="{Binding ClientName, UpdateSourceTrigger=PropertyChanged}"
                     md:HintAssist.Hint="Client Name *"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     Margin="0,0,0,16" />

            <!-- Website -->
            <TextBox Text="{Binding Website, UpdateSourceTrigger=PropertyChanged}"
                     md:HintAssist.Hint="Website"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     Margin="0,0,0,16" />

            <!-- Address Line 1 -->
            <TextBox Text="{Binding AddressLine1, UpdateSourceTrigger=PropertyChanged}"
                     md:HintAssist.Hint="Address Line 1"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     Margin="0,0,0,16" />

            <!-- Address Line 2 -->
            <TextBox Text="{Binding AddressLine2, UpdateSourceTrigger=PropertyChanged}"
                     md:HintAssist.Hint="Address Line 2"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     Margin="0,0,0,16" />

            <!-- City / State / Zip -->
            <Grid Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="100" />
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0"
                         Text="{Binding City, UpdateSourceTrigger=PropertyChanged}"
                         md:HintAssist.Hint="City"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,8,0" />

                <TextBox Grid.Column="1"
                         Text="{Binding State, UpdateSourceTrigger=PropertyChanged}"
                         md:HintAssist.Hint="State"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="4,0" />

                <TextBox Grid.Column="2"
                         Text="{Binding Zip, UpdateSourceTrigger=PropertyChanged}"
                         md:HintAssist.Hint="Zip"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="8,0,0,0" />
            </Grid>

            <!-- Client Notes -->
            <TextBox Text="{Binding ClientNotes, UpdateSourceTrigger=PropertyChanged}"
                     md:HintAssist.Hint="Client Notes"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     MinHeight="60"
                     MaxHeight="120"
                     VerticalScrollBarVisibility="Auto"
                     Margin="0,0,0,16" />

            <!-- Section: Contact Info -->
            <Separator Margin="0,0,0,16" />
            <TextBlock Text="Primary Contact (optional)"
                       Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                       Opacity="0.8"
                       Margin="0,0,0,12" />

            <!-- First / Last Name -->
            <Grid Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0"
                         Text="{Binding ContactFirstName, UpdateSourceTrigger=PropertyChanged}"
                         md:HintAssist.Hint="First Name"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,8,0" />

                <TextBox Grid.Column="1"
                         Text="{Binding ContactLastName, UpdateSourceTrigger=PropertyChanged}"
                         md:HintAssist.Hint="Last Name"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="8,0,0,0" />
            </Grid>

            <!-- Email / Phone -->
            <Grid Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0"
                         Text="{Binding ContactEmail, UpdateSourceTrigger=PropertyChanged}"
                         md:HintAssist.Hint="Email"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,8,0" />

                <TextBox Grid.Column="1"
                         Text="{Binding ContactPhone, UpdateSourceTrigger=PropertyChanged}"
                         md:HintAssist.Hint="Phone"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="8,0,0,0" />
            </Grid>

            <!-- Job Title -->
            <TextBox Text="{Binding ContactJobTitle, UpdateSourceTrigger=PropertyChanged}"
                     md:HintAssist.Hint="Job Title"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     Margin="0,0,0,16" />

            <!-- Error Message -->
            <TextBlock Text="{Binding ErrorMessage}"
                       Foreground="{DynamicResource MaterialDesignValidationErrorBrush}"
                       Visibility="{Binding ErrorMessage, Converter={StaticResource NullToCollapsedConverter}}"
                       Margin="0,0,0,12"
                       TextWrapping="Wrap" />

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel"
                        Command="{Binding CancelCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Margin="0,0,12,0" />
                <Button Content="Promote"
                        Command="{Binding SaveCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        IsEnabled="{Binding IsSaving, Converter={StaticResource InverseBooleanConverter}}" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>
