<Window x:Class="JobTrackerFrontend.Views.ContactFormDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:vm="clr-namespace:JobTrackerFrontend.ViewModels"
        d:DataContext="{d:DesignInstance vm:ContactFormViewModel}"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}"
        Width="450" SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        FontFamily="{md:MaterialDesignFont}">

    <StackPanel Margin="24">
        <!-- First / Last Name -->
        <Grid Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0"
                     Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"
                     md:HintAssist.Hint="First Name *"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     Margin="0,0,6,0" />

            <TextBox Grid.Column="1"
                     Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"
                     md:HintAssist.Hint="Last Name"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     Margin="6,0,0,0" />
        </Grid>

        <!-- Email -->
        <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                 md:HintAssist.Hint="Email"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 Margin="0,0,0,16" />

        <!-- Phone -->
        <TextBox Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}"
                 md:HintAssist.Hint="Phone"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 Margin="0,0,0,16" />

        <!-- Job Title -->
        <TextBox Text="{Binding JobTitle, UpdateSourceTrigger=PropertyChanged}"
                 md:HintAssist.Hint="Job Title"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 Margin="0,0,0,16" />

        <!-- Primary Toggle -->
        <CheckBox Content="Primary Contact"
                  IsChecked="{Binding IsPrimary}"
                  Style="{StaticResource MaterialDesignCheckBox}"
                  Margin="0,0,0,16" />

        <!-- Error Message -->
        <TextBlock Text="{Binding ErrorMessage}"
                   Foreground="{DynamicResource MaterialDesignValidationErrorBrush}"
                   Visibility="{Binding ErrorMessage, Converter={StaticResource NullToCollapsedConverter}}"
                   Margin="0,0,0,12"
                   TextWrapping="Wrap" />

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel"
                    Command="{Binding CancelCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Margin="0,0,12,0" />
            <Button Content="Save"
                    Command="{Binding SaveCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    IsEnabled="{Binding IsSaving, Converter={StaticResource InverseBooleanConverter}}" />
        </StackPanel>
    </StackPanel>
</Window>
