<Window x:Class="JobTrackerFrontend.Views.ClientFormDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:vm="clr-namespace:JobTrackerFrontend.ViewModels"
        d:DataContext="{d:DesignInstance vm:ClientFormViewModel}"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}"
        Width="500" SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        FontFamily="{md:MaterialDesignFont}">

    <StackPanel Margin="24">
        <!-- Client Type -->
        <ComboBox ItemsSource="{Binding ClientTypes}"
                  SelectedItem="{Binding Type}"
                  md:HintAssist.Hint="Client Type"
                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                  Margin="0,0,0,16" />

        <!-- Name -->
        <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                 md:HintAssist.Hint="Client Name *"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 Margin="0,0,0,16" />

        <!-- Website -->
        <TextBox Text="{Binding Website, UpdateSourceTrigger=PropertyChanged}"
                 md:HintAssist.Hint="Website"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 Margin="0,0,0,16" />

        <!-- Address Line 1 -->
        <TextBox Text="{Binding AddressLine1, UpdateSourceTrigger=PropertyChanged}"
                 md:HintAssist.Hint="Address Line 1"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 Margin="0,0,0,16" />

        <!-- Address Line 2 -->
        <TextBox Text="{Binding AddressLine2, UpdateSourceTrigger=PropertyChanged}"
                 md:HintAssist.Hint="Address Line 2"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 Margin="0,0,0,16" />

        <!-- City / State / Zip Row -->
        <Grid Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="100" />
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0"
                     Text="{Binding City, UpdateSourceTrigger=PropertyChanged}"
                     md:HintAssist.Hint="City"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     Margin="0,0,8,0" />

            <TextBox Grid.Column="1"
                     Text="{Binding State, UpdateSourceTrigger=PropertyChanged}"
                     md:HintAssist.Hint="State"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     Margin="4,0" />

            <TextBox Grid.Column="2"
                     Text="{Binding Zip, UpdateSourceTrigger=PropertyChanged}"
                     md:HintAssist.Hint="Zip"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     Margin="8,0,0,0" />
        </Grid>

        <!-- Notes -->
        <TextBox Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}"
                 md:HintAssist.Hint="Notes"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 MinHeight="80"
                 MaxHeight="160"
                 VerticalScrollBarVisibility="Auto"
                 Margin="0,0,0,16" />

        <!-- Error Message -->
        <TextBlock Text="{Binding ErrorMessage}"
                   Foreground="{DynamicResource MaterialDesignValidationErrorBrush}"
                   Visibility="{Binding ErrorMessage, Converter={StaticResource NullToCollapsedConverter}}"
                   Margin="0,0,0,12"
                   TextWrapping="Wrap" />

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel"
                    Command="{Binding CancelCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Margin="0,0,12,0" />
            <Button Content="Save"
                    Command="{Binding SaveCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    IsEnabled="{Binding IsSaving, Converter={StaticResource InverseBooleanConverter}}" />
        </StackPanel>
    </StackPanel>
</Window>
