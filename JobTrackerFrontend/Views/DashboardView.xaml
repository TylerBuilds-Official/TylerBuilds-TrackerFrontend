<UserControl x:Class="JobTrackerFrontend.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:JobTrackerFrontend.ViewModels"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             d:DataContext="{d:DesignInstance vm:DashboardViewModel}"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Loaded="OnLoaded">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Loading -->
        <ProgressBar Grid.Row="0"
                     Style="{StaticResource MaterialDesignLinearProgressBar}"
                     IsIndeterminate="True"
                     Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                     Height="2"
                     Margin="0,0,0,4"
                     Background="Transparent"
                     BorderThickness="0" />

        <!-- Revenue Cards -->
        <Grid Grid.Row="1" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <md:Card Grid.Column="0" Margin="0,0,6,0" Padding="16">
                <StackPanel>
                    <TextBlock Text="Total Revenue"
                               Style="{StaticResource MaterialDesignCaptionTextBlock}"
                               Opacity="0.6" />
                    <TextBlock Text="{Binding RevenueSummary.TotalRevenue, StringFormat=C}"
                               Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                               Margin="0,8,0,0" />
                </StackPanel>
            </md:Card>
            <md:Card Grid.Column="1" Margin="6,0" Padding="16">
                <StackPanel>
                    <TextBlock Text="Outstanding"
                               Style="{StaticResource MaterialDesignCaptionTextBlock}"
                               Opacity="0.6" />
                    <TextBlock Text="{Binding RevenueSummary.Outstanding, StringFormat=C}"
                               Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                               Margin="0,8,0,0" />
                </StackPanel>
            </md:Card>
            <md:Card Grid.Column="2" Margin="6,0" Padding="16">
                <StackPanel>
                    <TextBlock Text="Overdue"
                               Style="{StaticResource MaterialDesignCaptionTextBlock}"
                               Opacity="0.6" />
                    <TextBlock Text="{Binding RevenueSummary.Overdue, StringFormat=C}"
                               Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                               Foreground="{DynamicResource MaterialDesignValidationErrorBrush}"
                               Margin="0,8,0,0" />
                </StackPanel>
            </md:Card>
            <md:Card Grid.Column="3" Margin="6,0,0,0" Padding="16">
                <StackPanel>
                    <TextBlock Text="Paid Invoices"
                               Style="{StaticResource MaterialDesignCaptionTextBlock}"
                               Opacity="0.6" />
                    <TextBlock Text="{Binding RevenueSummary.PaidInvoiceCount}"
                               Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                               Margin="0,8,0,0" />
                </StackPanel>
            </md:Card>
        </Grid>

        <!-- Income by Job Chart -->
        <md:Card Grid.Row="2" Margin="0,0,0,24" Padding="20">
            <DockPanel>
                <!-- Header row -->
                <DockPanel DockPanel.Dock="Top" Margin="0,0,0,4">
                    <StackPanel>
                        <TextBlock Text="{Binding ChartTitle}"
                                   Style="{StaticResource MaterialDesignHeadline6TextBlock}" />
                        <!-- Inline legend -->
                        <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                            <Ellipse Width="8" Height="8" Fill="#388E3C" Margin="0,0,5,0" VerticalAlignment="Center" />
                            <TextBlock Text="Paid" FontSize="11" Opacity="0.6" Margin="0,0,14,0" VerticalAlignment="Center" />
                            <Ellipse Width="8" Height="8" Fill="#FFA000" Margin="0,0,5,0" VerticalAlignment="Center" />
                            <TextBlock Text="Invoiced" FontSize="11" Opacity="0.6" VerticalAlignment="Center" />
                        </StackPanel>
                    </StackPanel>
                    <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right"
                                VerticalAlignment="Top">
                        <RadioButton Content="This Month" GroupName="ChartPeriod"
                                     IsChecked="True"
                                     Style="{StaticResource MaterialDesignTabRadioButtonBottom}"
                                     Command="{Binding SetMonthViewCommand}"
                                     Padding="10,5" FontSize="12" Cursor="Hand" />
                        <RadioButton Content="This Year" GroupName="ChartPeriod"
                                     Style="{StaticResource MaterialDesignTabRadioButtonBottom}"
                                     Command="{Binding SetYearViewCommand}"
                                     Padding="10,5" FontSize="12" Cursor="Hand" />
                    </StackPanel>
                </DockPanel>

                <!-- Chart -->
                <lvc:CartesianChart Height="260"
                                    Series="{Binding IncomeChartSeries}"
                                    XAxes="{Binding IncomeXAxes}"
                                    YAxes="{Binding IncomeYAxes}"
                                    TooltipPosition="Hidden"
                                    LegendPosition="Hidden"
                                    AnimationsSpeed="00:00:00.3"
                                    Margin="0,8,0,0" />
            </DockPanel>
        </md:Card>

        <!-- Hours This Week -->
        <md:Card Grid.Row="3" Margin="0,0,0,24" Padding="20"
                 Visibility="{Binding HasWeeklyHoursData, Converter={StaticResource BooleanToVisibilityConverter}}">
            <DockPanel>
                <TextBlock DockPanel.Dock="Top"
                           Text="Hours This Week"
                           Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                           Margin="0,0,0,4" />
                <lvc:CartesianChart Height="200"
                                    Series="{Binding WeeklyHoursSeries}"
                                    XAxes="{Binding WeeklyHoursXAxes}"
                                    YAxes="{Binding WeeklyHoursYAxes}"
                                    TooltipPosition="Hidden"
                                    LegendPosition="Hidden"
                                    AnimationsSpeed="00:00:00.3"
                                    Margin="0,8,0,0" />
            </DockPanel>
        </md:Card>

        <!-- Pipeline + Recent Activity -->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Job Pipeline -->
            <md:Card Grid.Column="0" Margin="0,0,6,0" Padding="16">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top"
                               Text="Job Pipeline"
                               Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                               Margin="0,0,0,12" />
                    <ItemsControl ItemsSource="{Binding Pipeline}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#0A000000" BorderThickness="0,0,0,1" Padding="0,6">
                                    <DockPanel>
                                        <Ellipse Width="10" Height="10" Margin="0,0,8,0"
                                                 VerticalAlignment="Center"
                                                 Fill="{Binding Status, Converter={StaticResource StatusToBrushConverter}}" />
                                        <TextBlock Text="{Binding Status}" Width="90"
                                                   FontWeight="Medium" VerticalAlignment="Center" />
                                        <TextBlock Text="{Binding JobCount, StringFormat='{}{0} jobs'}"
                                                   Width="60" Opacity="0.6" VerticalAlignment="Center" />
                                        <TextBlock Text="{Binding TotalEstimatedValue, StringFormat=C}"
                                                   HorizontalAlignment="Right" VerticalAlignment="Center" />
                                    </DockPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </DockPanel>
            </md:Card>

            <!-- Recent Activity -->
            <md:Card Grid.Column="1" Margin="6,0,0,0" Padding="16">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top"
                               Text="Recent Activity"
                               Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                               Margin="0,0,0,12" />
                    <ItemsControl ItemsSource="{Binding RecentActivity}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <DockPanel Margin="0,4">
                                    <md:PackIcon Kind="{Binding EntityType,
                                        Converter={StaticResource EntityTypeToIconConverter}}"
                                                 Width="16" Height="16"
                                                 Margin="0,0,8,0"
                                                 VerticalAlignment="Center" />
                                    <TextBlock Text="{Binding Summary}" TextTrimming="CharacterEllipsis" />
                                </DockPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </DockPanel>
            </md:Card>
        </Grid>

    </Grid>
</UserControl>
