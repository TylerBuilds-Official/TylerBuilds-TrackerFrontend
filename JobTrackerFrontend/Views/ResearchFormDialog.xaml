<Window x:Class="JobTrackerFrontend.Views.ResearchFormDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:vm="clr-namespace:JobTrackerFrontend.ViewModels"
        d:DataContext="{d:DesignInstance vm:ResearchFormViewModel}"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}"
        Width="540" SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        FontFamily="{md:MaterialDesignFont}"
        Loaded="OnLoaded">

    <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="750">
        <StackPanel Margin="24">

            <!-- Client (optional link) -->
            <ComboBox ItemsSource="{Binding Clients}"
                      SelectedItem="{Binding SelectedClient}"
                      md:HintAssist.Hint="Link to Client (optional)"
                      Style="{StaticResource MaterialDesignOutlinedComboBox}"
                      Margin="0,0,0,16">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <!-- Contact (loads from selected client) -->
            <ComboBox ItemsSource="{Binding Contacts}"
                      SelectedItem="{Binding SelectedContact}"
                      md:HintAssist.Hint="Contact (optional)"
                      Style="{StaticResource MaterialDesignOutlinedComboBox}"
                      IsEnabled="{Binding SelectedClient, Converter={StaticResource NotNullToBoolConverter}}"
                      Margin="0,0,0,16">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock>
                            <Run Text="{Binding FirstName}" />
                            <Run Text=" " />
                            <Run Text="{Binding LastName}" />
                        </TextBlock>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <!-- Business Name -->
            <TextBox Text="{Binding BusinessName, UpdateSourceTrigger=PropertyChanged}"
                     md:HintAssist.Hint="Business Name *"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     Margin="0,0,0,16" />

            <!-- Theme -->
            <ComboBox ItemsSource="{Binding Themes}"
                      SelectedItem="{Binding SelectedTheme}"
                      DisplayMemberPath="Name"
                      md:HintAssist.Hint="Theme (optional)"
                      Style="{StaticResource MaterialDesignOutlinedComboBox}"
                      Margin="0,0,0,16" />

            <!-- Date Contacted + Follow-Up Date -->
            <Grid Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <DatePicker Grid.Column="0"
                            SelectedDate="{Binding DateContacted}"
                            md:HintAssist.Hint="Date Contacted *"
                            Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                            Margin="0,0,8,0" />

                <DatePicker Grid.Column="1"
                            SelectedDate="{Binding FollowUpDate}"
                            md:HintAssist.Hint="Follow-Up Date"
                            Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                            Margin="8,0,0,0" />
            </Grid>

            <!-- Interest Level + Would Pay + Status -->
            <Grid Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <ComboBox Grid.Column="0"
                          ItemsSource="{Binding InterestLevelOptions}"
                          SelectedItem="{Binding InterestLevel}"
                          md:HintAssist.Hint="Interest (1-5)"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                          Margin="0,0,6,0" />

                <ComboBox Grid.Column="1"
                          ItemsSource="{Binding WouldPayOptions}"
                          SelectedItem="{Binding SelectedWouldPayDisplay}"
                          md:HintAssist.Hint="Would Pay"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                          Margin="6,0" />

                <ComboBox Grid.Column="2"
                          ItemsSource="{Binding StatusOptions}"
                          SelectedItem="{Binding SelectedStatusDisplay}"
                          md:HintAssist.Hint="Status"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                          Margin="6,0,0,0" />
            </Grid>

            <!-- Pain Points -->
            <TextBox Text="{Binding PainPoints, UpdateSourceTrigger=PropertyChanged}"
                     md:HintAssist.Hint="Pain Points"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     MinHeight="60"
                     MaxHeight="120"
                     VerticalScrollBarVisibility="Auto"
                     Margin="0,0,0,16" />

            <!-- Notes -->
            <TextBox Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}"
                     md:HintAssist.Hint="Notes"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     MinHeight="60"
                     MaxHeight="120"
                     VerticalScrollBarVisibility="Auto"
                     Margin="0,0,0,16" />

            <!-- Error Message -->
            <TextBlock Text="{Binding ErrorMessage}"
                       Foreground="{DynamicResource MaterialDesignValidationErrorBrush}"
                       Visibility="{Binding ErrorMessage, Converter={StaticResource NullToCollapsedConverter}}"
                       Margin="0,0,0,12"
                       TextWrapping="Wrap" />

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel"
                        Command="{Binding CancelCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Margin="0,0,12,0" />
                <Button Content="Save"
                        Command="{Binding SaveCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        IsEnabled="{Binding IsSaving, Converter={StaticResource InverseBooleanConverter}}" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>
