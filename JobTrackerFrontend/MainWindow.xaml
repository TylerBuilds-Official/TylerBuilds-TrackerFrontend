<Window x:Class="JobTrackerFrontend.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:vm="clr-namespace:JobTrackerFrontend.ViewModels"
        d:DataContext="{d:DesignInstance vm:MainWindowViewModel}"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="TylerBuilds | JobTracker"
        Height="800" Width="1280"
        MinHeight="600" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        FontFamily="{md:MaterialDesignFont}">

    <Window.Resources>
        <QuadraticEase x:Key="SidebarEase" EasingMode="EaseOut" />

        <!-- Sidebar: theme-aware -->
        <Style x:Key="SidebarBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="#F0F2F5" />
            <Setter Property="BorderBrush" Value="#E0E0E0" />
            <Setter Property="BorderThickness" Value="0,0,1,0" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsDarkMode}" Value="True">
                    <Setter Property="Background" Value="#151D21" />
                    <Setter Property="BorderBrush" Value="#1E2A2F" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="NavButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
            <Setter Property="Foreground" Value="#546E7A" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="Padding" Value="8,6" />
            <Setter Property="MinWidth" Value="0" />
            <Setter Property="Height" Value="36" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsDarkMode}" Value="True">
                    <Setter Property="Foreground" Value="#B0BEC5" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="NavMenuButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
            <Setter Property="Foreground" Value="#546E7A" />
            <Setter Property="MinWidth" Value="0" />
            <Setter Property="Padding" Value="8,6" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsDarkMode}" Value="True">
                    <Setter Property="Foreground" Value="#B0BEC5" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="NavSignOutButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
            <Setter Property="Foreground" Value="#78909C" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="Padding" Value="8,8" />
            <Setter Property="Margin" Value="8,8,8,0" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsDarkMode}" Value="True">
                    <Setter Property="Foreground" Value="#80FFFFFF" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="NavSeparatorStyle" TargetType="Separator">
            <Setter Property="Background" Value="#E0E0E0" />
            <Setter Property="Margin" Value="12,0" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsDarkMode}" Value="True">
                    <Setter Property="Background" Value="#33FFFFFF" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Startup Splash (shown while checking for previous session) -->
        <Grid Visibility="{Binding IsCheckingAuth, Converter={StaticResource BooleanToVisibilityConverter}}"
              Panel.ZIndex="20"
              Background="{DynamicResource MaterialDesignPaper}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <md:PackIcon Kind="ShieldAccount"
                             Width="64" Height="64"
                             HorizontalAlignment="Center"
                             Margin="0,0,0,24"
                             Foreground="{DynamicResource PrimaryHueMidBrush}" />
                <TextBlock Text="TylerBuilds | JobTracker"
                           Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,8" />
                <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                             IsIndeterminate="True"
                             Width="28" Height="28"
                             HorizontalAlignment="Center"
                             Margin="0,24,0,12" />
                <TextBlock Text="{Binding AuthStatusMessage}"
                           Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                           HorizontalAlignment="Center"
                           Opacity="0.6" />
            </StackPanel>
        </Grid>

        <!-- Login Screen (shown when not authenticated and not checking) -->
        <Grid Visibility="{Binding IsAuthenticated, Converter={StaticResource InverseBoolToVisConverter}}"
              Panel.ZIndex="10"
              Background="{DynamicResource MaterialDesignPaper}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <md:PackIcon Kind="ShieldAccount"
                             Width="64" Height="64"
                             HorizontalAlignment="Center"
                             Margin="0,0,0,24"
                             Foreground="{DynamicResource PrimaryHueMidBrush}" />
                <TextBlock Text="TylerBuilds | JobTracker"
                           Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,8" />
                <TextBlock Text="Sign in with your TylerBuilds account to continue"
                           Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                           HorizontalAlignment="Center"
                           Opacity="0.6"
                           Margin="0,0,0,32" />
                <CheckBox Content="Stay signed in"
                          IsChecked="{Binding StaySignedIn}"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,16"
                          Style="{StaticResource MaterialDesignCheckBox}" />
                <Button Content="Sign In"
                        Command="{Binding LoginCommand}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Width="200" Height="40"
                        HorizontalAlignment="Center"
                        FontSize="14" />
            </StackPanel>
        </Grid>

        <!-- Main App Shell (shown when authenticated) -->
        <Grid Visibility="{Binding IsAuthenticated, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <Border x:Name="SidebarBorder"
                    Grid.Column="0"
                    Style="{StaticResource SidebarBorderStyle}"
                    Width="220">
                <DockPanel>
                    <!-- Top: Menu Toggle -->
                    <Button DockPanel.Dock="Top"
                            Command="{Binding ToggleNavCommand}"
                            Style="{StaticResource NavMenuButtonStyle}"
                            HorizontalAlignment="Left"
                            Margin="8,10,0,10">
                        <md:PackIcon Kind="Menu" Width="20" Height="20" />
                    </Button>

                    <!-- Bottom: User + Logout -->
                    <StackPanel DockPanel.Dock="Bottom" Margin="0,0,0,12">
                        <Separator Style="{StaticResource NavSeparatorStyle}" />
                        <Button Command="{Binding LogoutCommand}"
                                Style="{StaticResource NavSignOutButtonStyle}"
                                ToolTip="Sign Out">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <md:PackIcon Kind="Logout" Width="18" Height="18" Margin="4,0,10,0" VerticalAlignment="Center" />
                                <TextBlock Text="Sign Out"
                                           VerticalAlignment="Center"
                                           FontSize="13"
                                           Visibility="{Binding IsNavExpanded, Converter={StaticResource BooleanToVisibilityConverter}}" />
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!-- Nav Items -->
                    <StackPanel Margin="0,8,0,0">
                        <!-- Dashboard -->
                        <Border CornerRadius="2" Margin="8,2" BorderThickness="0">
                            <Border.Background>
                                <MultiBinding Converter="{StaticResource ActiveNavBrushConverter}">
                                    <Binding Source="Dashboard" />
                                    <Binding Path="SelectedNavItem" />
                                </MultiBinding>
                            </Border.Background>
                            <Border.BorderBrush>
                                <MultiBinding Converter="{StaticResource ActiveNavBorderConverter}">
                                    <Binding Source="Dashboard" />
                                    <Binding Path="SelectedNavItem" />
                                </MultiBinding>
                            </Border.BorderBrush>
                            <Button Command="{Binding NavigateToCommand}"
                                    CommandParameter="Dashboard"
                                    Style="{StaticResource NavButtonStyle}"
                                    ToolTip="Dashboard">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <md:PackIcon Kind="ViewDashboard" Width="18" Height="18" Margin="2,0,10,0" VerticalAlignment="Center" />
                                    <TextBlock Text="Dashboard"
                                               VerticalAlignment="Center"
                                               Visibility="{Binding IsNavExpanded, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                </StackPanel>
                            </Button>
                        </Border>

                        <!-- Clients -->
                        <Border CornerRadius="2" Margin="8,2" BorderThickness="0">
                            <Border.Background>
                                <MultiBinding Converter="{StaticResource ActiveNavBrushConverter}">
                                    <Binding Source="Clients" />
                                    <Binding Path="SelectedNavItem" />
                                </MultiBinding>
                            </Border.Background>
                            <Border.BorderBrush>
                                <MultiBinding Converter="{StaticResource ActiveNavBorderConverter}">
                                    <Binding Source="Clients" />
                                    <Binding Path="SelectedNavItem" />
                                </MultiBinding>
                            </Border.BorderBrush>
                            <Button Command="{Binding NavigateToCommand}"
                                    CommandParameter="Clients"
                                    Style="{StaticResource NavButtonStyle}"
                                    ToolTip="Clients">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <md:PackIcon Kind="AccountGroup" Width="18" Height="18" Margin="2,0,10,0" VerticalAlignment="Center" />
                                    <TextBlock Text="Clients"
                                               VerticalAlignment="Center"
                                               Visibility="{Binding IsNavExpanded, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                </StackPanel>
                            </Button>
                        </Border>

                        <!-- Jobs -->
                        <Border CornerRadius="2" Margin="8,2" BorderThickness="0">
                            <Border.Background>
                                <MultiBinding Converter="{StaticResource ActiveNavBrushConverter}">
                                    <Binding Source="Jobs" />
                                    <Binding Path="SelectedNavItem" />
                                </MultiBinding>
                            </Border.Background>
                            <Border.BorderBrush>
                                <MultiBinding Converter="{StaticResource ActiveNavBorderConverter}">
                                    <Binding Source="Jobs" />
                                    <Binding Path="SelectedNavItem" />
                                </MultiBinding>
                            </Border.BorderBrush>
                            <Button Command="{Binding NavigateToCommand}"
                                    CommandParameter="Jobs"
                                    Style="{StaticResource NavButtonStyle}"
                                    ToolTip="Jobs">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <md:PackIcon Kind="Briefcase" Width="18" Height="18" Margin="2,0,10,0" VerticalAlignment="Center" />
                                    <TextBlock Text="Jobs"
                                               VerticalAlignment="Center"
                                               Visibility="{Binding IsNavExpanded, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                </StackPanel>
                            </Button>
                        </Border>

                        <!-- Invoices -->
                        <Border CornerRadius="2" Margin="8,2" BorderThickness="0">
                            <Border.Background>
                                <MultiBinding Converter="{StaticResource ActiveNavBrushConverter}">
                                    <Binding Source="Invoices" />
                                    <Binding Path="SelectedNavItem" />
                                </MultiBinding>
                            </Border.Background>
                            <Border.BorderBrush>
                                <MultiBinding Converter="{StaticResource ActiveNavBorderConverter}">
                                    <Binding Source="Invoices" />
                                    <Binding Path="SelectedNavItem" />
                                </MultiBinding>
                            </Border.BorderBrush>
                            <Button Command="{Binding NavigateToCommand}"
                                    CommandParameter="Invoices"
                                    Style="{StaticResource NavButtonStyle}"
                                    ToolTip="Invoices">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <md:PackIcon Kind="FileDocumentOutline" Width="18" Height="18" Margin="2,0,10,0" VerticalAlignment="Center" />
                                    <TextBlock Text="Invoices"
                                               VerticalAlignment="Center"
                                               Visibility="{Binding IsNavExpanded, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                </StackPanel>
                            </Button>
                        </Border>

                        <!-- Expenses -->
                        <Border CornerRadius="2" Margin="8,2" BorderThickness="0">
                            <Border.Background>
                                <MultiBinding Converter="{StaticResource ActiveNavBrushConverter}">
                                    <Binding Source="Expenses" />
                                    <Binding Path="SelectedNavItem" />
                                </MultiBinding>
                            </Border.Background>
                            <Border.BorderBrush>
                                <MultiBinding Converter="{StaticResource ActiveNavBorderConverter}">
                                    <Binding Source="Expenses" />
                                    <Binding Path="SelectedNavItem" />
                                </MultiBinding>
                            </Border.BorderBrush>
                            <Button Command="{Binding NavigateToCommand}"
                                    CommandParameter="Expenses"
                                    Style="{StaticResource NavButtonStyle}"
                                    ToolTip="Expenses">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <md:PackIcon Kind="CashMinus" Width="18" Height="18" Margin="2,0,10,0" VerticalAlignment="Center" />
                                    <TextBlock Text="Expenses"
                                               VerticalAlignment="Center"
                                               Visibility="{Binding IsNavExpanded, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                </StackPanel>
                            </Button>
                        </Border>

                        <!-- Time Clock -->
                        <Border CornerRadius="2" Margin="8,2" BorderThickness="0">
                            <Border.Background>
                                <MultiBinding Converter="{StaticResource ActiveNavBrushConverter}">
                                    <Binding Source="Time Clock" />
                                    <Binding Path="SelectedNavItem" />
                                </MultiBinding>
                            </Border.Background>
                            <Border.BorderBrush>
                                <MultiBinding Converter="{StaticResource ActiveNavBorderConverter}">
                                    <Binding Source="Time Clock" />
                                    <Binding Path="SelectedNavItem" />
                                </MultiBinding>
                            </Border.BorderBrush>
                            <Button Command="{Binding NavigateToCommand}"
                                    CommandParameter="Time Clock"
                                    Style="{StaticResource NavButtonStyle}"
                                    ToolTip="Time Clock">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <md:PackIcon Kind="ClockOutline" Width="18" Height="18" Margin="2,0,10,0" VerticalAlignment="Center" />
                                    <TextBlock Text="Time Clock"
                                               VerticalAlignment="Center"
                                               Visibility="{Binding IsNavExpanded, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                </StackPanel>
                            </Button>
                        </Border>
                    </StackPanel>
                </DockPanel>
            </Border>

            <!-- Content Area -->
            <Grid Grid.Column="1" ClipToBounds="True">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Top Bar -->
                <Border Grid.Row="0"
                        Padding="16,10"
                        Margin="24,0,24,0"
                        CornerRadius="0,0,4,4">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="#F0F2F5" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsDarkMode}" Value="True">
                                    <Setter Property="Background" Value="#253238" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="2" Direction="270"
                                          BlurRadius="6" Opacity="0.15"
                                          Color="Black" />
                    </Border.Effect>
                    <DockPanel>
                        <TextBlock Text="{Binding SelectedNavItem}"
                                   Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                   VerticalAlignment="Center" />
                        <StackPanel DockPanel.Dock="Right"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Right">
                                <Button Command="{Binding ToggleDarkModeCommand}"
                                    Style="{StaticResource MaterialDesignIconForegroundButton}"
                                    ToolTip="Toggle Dark Mode"
                                    Margin="0,0,16,0">
                                <md:PackIcon Width="20" Height="20">
                                    <md:PackIcon.Style>
                                        <Style TargetType="md:PackIcon">
                                            <Setter Property="Kind" Value="WeatherSunny" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsDarkMode}" Value="True">
                                                    <Setter Property="Kind" Value="WeatherNight" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </md:PackIcon.Style>
                                </md:PackIcon>
                            </Button>
                            <md:PackIcon Kind="Account"
                                         Width="20" Height="20"
                                         VerticalAlignment="Center"
                                         Margin="0,0,8,0"
                                         Opacity="0.6" />
                            <TextBlock Text="{Binding UserName}"
                                       VerticalAlignment="Center"
                                       Style="{StaticResource MaterialDesignBody2TextBlock}" />
                        </StackPanel>
                    </DockPanel>
                </Border>

                <!-- Dynamic Content -->
                <ContentControl Grid.Row="1"
                                Content="{Binding Navigation.CurrentView}" />
            </Grid>
        </Grid>
    </Grid>
</Window>
