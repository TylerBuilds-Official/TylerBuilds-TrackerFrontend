<Application x:Class="JobTrackerFrontend.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:JobTrackerFrontend.Converters">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- MaterialDesign Theme -->
                <md:BundledTheme BaseTheme="Light" PrimaryColor="BlueGrey" SecondaryColor="Teal" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign2.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Card depth -->
            <Style TargetType="md:Card" BasedOn="{StaticResource {x:Type md:Card}}">
                <Setter Property="Background" Value="{DynamicResource MaterialDesignCardBackground}" />
                <Setter Property="md:ElevationAssist.Elevation" Value="Dp2" />
                <Setter Property="BorderBrush" Value="{DynamicResource MaterialDesignDivider}" />
                <Setter Property="BorderThickness" Value="1" />
            </Style>

            <!-- TabControl theme -->
            <Style TargetType="TabControl" BasedOn="{StaticResource MaterialDesignTabControl}">
                <Setter Property="Background" Value="{DynamicResource MaterialDesignCardBackground}" />
            </Style>

            <!-- DataGrid theme -->
            <Style TargetType="DataGrid" BasedOn="{StaticResource MaterialDesignDataGrid}">
                <Setter Property="Background" Value="{DynamicResource MaterialDesignCardBackground}" />
            </Style>

            <Style TargetType="DataGridRow" BasedOn="{StaticResource MaterialDesignDataGridRow}">
                <Setter Property="Background" Value="{DynamicResource MaterialDesignCardBackground}" />
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="{DynamicResource MaterialDesignDivider}" />
                    </Trigger>
                    <Trigger Property="IsSelected" Value="True">
                        <Setter Property="Background" Value="{DynamicResource PrimaryHueLightBrush}" />
                        <Setter Property="Foreground" Value="{DynamicResource PrimaryHueLightForegroundBrush}" />
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style TargetType="DataGridCell" BasedOn="{StaticResource MaterialDesignDataGridCell}">
                <Setter Property="Background" Value="Transparent" />
            </Style>

            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                <Setter Property="Background" Value="#ECEFF1" />
                <Setter Property="Foreground" Value="#546E7A" />
                <Setter Property="FontWeight" Value="SemiBold" />
                <Style.Triggers>
                    <DataTrigger Binding="{Binding DataContext.IsDarkMode, RelativeSource={RelativeSource AncestorType=Window}, FallbackValue=False}" Value="True">
                        <Setter Property="Background" Value="#253238" />
                        <Setter Property="Foreground" Value="#90A4AE" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>

            <!-- Converters -->
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisConverter" />
            <converters:NavWidthConverter x:Key="NavWidthConverter" />
            <converters:EntityTypeToIconConverter x:Key="EntityTypeToIconConverter" />
            <converters:NullToCollapsedConverter x:Key="NullToCollapsedConverter" />
            <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
            <converters:NotNullToBoolConverter x:Key="NotNullToBoolConverter" />
            <converters:ActiveNavBrushConverter x:Key="ActiveNavBrushConverter" />
            <converters:ActiveNavBorderConverter x:Key="ActiveNavBorderConverter" />
            <converters:StatusToBrushConverter x:Key="StatusToBrushConverter" />
            <converters:StatusToForegroundConverter x:Key="StatusToForegroundConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
